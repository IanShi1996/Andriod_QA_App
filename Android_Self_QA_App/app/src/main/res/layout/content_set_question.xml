<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id = "@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_set_question">

    <EditText android:id = "@+id/edit_question"
        android:layout_weight="1"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:hint = "@string/edit_question"
        android:layout_gravity="center_vertical"
        android:paddingBottom= "10dp"
        android:paddingLeft = "20dp"/>

    <Button android:id = "@+id/button_set_question"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:hint = "@string/button_send"
        android:onClick = "setQuestion"
        android:layout_gravity="center_vertical" />

</LinearLayout >
